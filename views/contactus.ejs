<!DOCTYPE html>
<html lang="en">


<%- include('./partials/header.ejs') %>


<style>
  .contact {
    border: 2px rgb(202, 202, 202) solid;

    box-shadow: none;
    background-color: rgb(255, 255, 255);
    color: rgb(0, 0, 0);
    /* border-radius: 0.7rem; */
    height: auto;


  }

  .contact:hover {

    background-color: #3399ff;
    color: white;
    border: 2px rgb(255, 255, 255) solid;
    /* border-radius: 0.7rem; */
    box-shadow: 7px 7px rgb(255, 255, 255);

  }
</style>


<body>

  <div class="container" style="font-family: 'Plus Jakarta Sans', sans-serif;">
    <%- include('./partials/navbar.ejs') %>


    <div class="row m-2">
      <form action="/contactus" class="bg-primary text-white p-3 rounded-4" method="post">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Your Name">
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="company" class="form-label">Company</label>
              <input type="text" class="form-control" id="company" name="company" placeholder="Your Company">
            </div>
          </div>
        </div>
  
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Your Email">
            </div>
          </div>
  
          <div class="col-md-6">
            <div class="mb-3">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" placeholder="Your Phone Number">
            </div>
          </div>
        </div>
  
        <div class="row justify-content-center">
          <div class="col">
            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject of Your Message">
            </div>
          </div>
        </div>
  
        <div class="row justify-content-center">
          <div class="col">
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" placeholder="Your Message"></textarea>
            </div>
          </div>
        </div>
  
        <div class="row justify-content-center text-center p-2">
          <button type="submit" class="btn btn-primary  rounded-pill">Submit</button>
        </div>
  
  
      </form>
    </div>



    <hr>
    <div class="row" style="margin-top: 5rem;" id="aboutus">
      <%- include('./partials/connect.ejs') %>
    </div>



  </div>
  <%- include('./partials/socialmedia.ejs') %>
</body>

</html>
